<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="146dp">

    <com.zhuchao.android.ktv.widgets.ScaleConstraintLayout
        android:id="@+id/cl_back_to_top"
        android:layout_width="131dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        app:scale_mode="ZOOM_FACTOR_MEDIUM"
        android:background="@drawable/selector_focus_bg_corner15_without_default_bg"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/cl_look_around"
        app:layout_constraintTop_toTopOf="parent">

        <!-- <ImageView
             android:id="@+id/iv_back_to_top"
             android:layout_width="@dimen/px56"
             android:layout_height="@dimen/px56"
             android:layout_marginStart="@dimen/px36"
             android:src="@drawable/back_to_top"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintLeft_toLeftOf="parent"
             app:layout_constraintTop_toTopOf="parent" />-->

        <TextView
            android:id="@+id/tv_back_to_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="回到顶部"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </com.zhuchao.android.ktv.widgets.ScaleConstraintLayout>

    <com.zhuchao.android.ktv.widgets.ScaleConstraintLayout
        android:id="@+id/cl_look_around"
        android:layout_width="131dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        app:scale_mode="ZOOM_FACTOR_MEDIUM"
        android:background="@drawable/selector_focus_bg_corner15_without_default_bg"
        app:layout_constraintLeft_toRightOf="@+id/cl_back_to_top"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cl_back_to_top">

        <!--<ImageView
            android:id="@+id/iv_look_around"
            android:layout_width="@dimen/px56"
            android:layout_height="@dimen/px56"
            android:layout_marginStart="@dimen/px36"
            android:src="@drawable/look_around"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />-->

        <TextView
            android:id="@+id/tv_look_around"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="随心看"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </com.zhuchao.android.ktv.widgets.ScaleConstraintLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="47dp"
        android:text="没有找到想看的？试试随心看吧"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>